generator client {
  provider   = "prisma-client"
  output     = "../DB/prisma"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum USER_ROLE {
  User
  Admin
}

model User {
  id       String    @unique @default(uuid())
  email    String    @unique
  password String
  role     USER_ROLE @default(User)
}

model Category {
  id       String    @unique @default(uuid())
  title    String    @unique
  Products Product[]
}

model Product {
  id          String   @unique @default(uuid())
  imageUrl    String
  title       String
  description String
  price       Float
  categoryId  String
  Category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([title, categoryId])
}

model customerReview {
  id           String @id @default(uuid())
  numberOfStar Int
  text         String
  authorName   String
}

model websiteSection {
  id      String @id @default(uuid())
  order   Int    @unique
  title   String @unique
  content Json
}
